<UserControl x:Class="QLHieuThuoc.UserControls.FNhapHang_SanPhamChiTiet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLHieuThuoc.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="46" d:DesignWidth="469">
    <Border Background="White" Height="46" CornerRadius="5">
        <Grid>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Cascadia Mono"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Foreground" Value="#565656"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- tên sản phẩm -->
            <TextBlock x:Name="tbl_TenSanPham" HorizontalAlignment="Center"> Ten san pham</TextBlock>

            <!-- số lượng -->
            <TextBlock x:Name="tbl_SoLuong" HorizontalAlignment="Center" Grid.Column="1">So Luong</TextBlock>

            <!-- Giá -->
            <TextBlock x:Name="tbl_Gia" HorizontalAlignment="Center" Grid.Column="2">Gia</TextBlock>
        </Grid>
    </Border>
</UserControl>
