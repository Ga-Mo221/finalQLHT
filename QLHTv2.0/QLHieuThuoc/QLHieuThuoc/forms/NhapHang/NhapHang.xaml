                    <!-- thanh tìm kiếm -->
                    <Grid >
                        <!--<Border BorderBrush="#C9C9C9" BorderThickness="1" CornerRadius="15" Width="379" Height="30" HorizontalAlignment="Center">
                            <Grid >
                                <TextBox x:Name="tb_TimKiem" 
                                         Style="{DynamicResource timkiem}" 
