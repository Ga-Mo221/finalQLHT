                </Button>
                
                
                <!-- tổng số đơn nhập -->
                <Border Grid.Column="4" CornerRadius="20" BorderThickness="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFEDE4A7"/>
                            <GradientStop Color="#FFF3C0A2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
