                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFD46565"/>
                            <GradientStop Color="#FFE2895A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Content>
                        <Grid>
                            <Rectangle Width="80" Height="15" Fill="White"/>
                            <Rectangle Width="15" Height="80" Fill="White"/>
                        </Grid>
                    </Button.Content>
                </Button>
                
                
                <!-- nhà cung cấp -->
