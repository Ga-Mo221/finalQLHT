                            <GradientStop Color="#FFE6D2C7"/>
                            <GradientStop Color="#FFE2895A" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Content>
                        <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Button}}"
