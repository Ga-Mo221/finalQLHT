                                </Border>

                                <!--list san pham-->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="stb_ListSanPham" Orientation="Vertical"></StackPanel>
                                </ScrollViewer>
                            </Grid>
