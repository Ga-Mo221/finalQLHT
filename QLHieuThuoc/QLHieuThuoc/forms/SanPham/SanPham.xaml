                                                   Grid.Column="2">
                                            so luong
                                        </TextBlock>

                                        <!-- giá bán -->
                                        <TextBlock x:Name="tbl_GiaBan" FontFamily="Cascadia Mono"
                                                   FontSize="15"
                                                   Foreground="#565656"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Grid.Column="3">
                                            gia ban
                                        </TextBlock>

                                        <!-- trạng thái -->
                                        <TextBlock x:Name="tbl_TinhTrang" FontFamily="Cascadia Mono"
