                    </Border>

                    <!-- thông báo -->
                    <Grid DockPanel.Dock="Right" Width="85">
                        <Button Style="{DynamicResource ButtonStyle1}"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40" Background="White" Click="Button_Click">
