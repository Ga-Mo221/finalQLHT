                                <Border Background="#F7F7F7" CornerRadius="13" Grid.Column="4"></Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- column 4 - lượt mua -->
                    <Border Style="{StaticResource borderNgoai}" Grid.Column="4" Padding="10">
