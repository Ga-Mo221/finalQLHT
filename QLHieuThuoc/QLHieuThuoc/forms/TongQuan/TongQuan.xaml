                       VerticalAlignment="Center">
                    </TextBlock>


                    <!-- tên tài khoản -->
                    <Border BorderBrush="#C9C9C9" BorderThickness="1" CornerRadius="20" DockPanel.Dock="Right" Width="230">
                        <StackPanel>
                            <!-- tên nhân viên -->
                            <TextBlock x:Name="tbl_TenNhanVienThanhTiemKiem" Text="Tên Tài Khoản" 
