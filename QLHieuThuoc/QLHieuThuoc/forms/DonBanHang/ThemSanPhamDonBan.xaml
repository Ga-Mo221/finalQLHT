            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.MouseOver.Border1}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.Focus.Border1}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled" Value="true"/>
                        <Condition Property="IsSelectionActive" Value="false"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="SelectionBrush" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="#F7F7F7" BorderBrush="#565656" BorderThickness="1" CornerRadius="15" Padding="20">
        <Grid>
            <Grid.Resources>
                <Style x:Key="borderngoai" TargetType="Border">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#565656"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="CornerRadius" Value="15"/>
                    <Setter Property="Padding" Value="20"/>
                </Style>

                <Style x:Key="bordertrong" TargetType="Border">
                    <Setter Property="Background" Value="#D9D9D9"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Cascadia Mono"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Foreground" Value="#565656"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- thanh tiêu đề -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <!-- tiêu đề -->
                <Border Background="#E2895A" CornerRadius="25" BorderThickness="0">
                    <DockPanel>
                        <Grid Width="20" DockPanel.Dock="Left"></Grid>
                        <TextBlock x:Name="tbl_TieuDe" VerticalAlignment="Center">San Pham</TextBlock>
                    </DockPanel>
                </Border>

                <!-- giỏ hàng -->
                <Grid Grid.Column="2">
                    <Ellipse Height="50" Width="50" Fill="#E2895A"></Ellipse>
                    <TextBlock FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center">🛒</TextBlock>
                    <Grid Width="22" Height="22" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Ellipse Height="22" Width="22" Fill="Red"></Ellipse>
                        <TextBlock x:Name="tbl_SoLuongSanPhamGioHang" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">0</TextBlock>
                    </Grid>
                </Grid>
            </Grid>

            <!-- nội dung -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="527"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- bảng sản phẩm -->
                <Border Style="{StaticResource borderngoai}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!-- loại sản phẩm -->
                        <ComboBox Style="{DynamicResource ComboBoxStyle1}" x:Name="cbb_LoaisanPham" 
                                  Width="222" 
                                  HorizontalAlignment="Left" 
                                  FontFamily="Cascadia Mono"
                                  FontSize="16"
                                  Foreground="#565656">
                        </ComboBox>

                        <!-- tìm sản phẩm -->
                        <Border Style="{StaticResource bordertrong}" CornerRadius="20" Width="245" HorizontalAlignment="Right">
                            <Grid>
                                <TextBlock FontSize="25" Text=" 🔍" VerticalAlignment="Center"></TextBlock>
                                <TextBox Style="{DynamicResource TextBoxStyle1}" x:Name="tb_TimKiem"
                                         FontFamily="Cascadia Mono"
                                         FontSize="16"
                                         Background="#D9D9D9"
                                         Width="190"
                                         Height="20"
                                         Foreground="#565656"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Text="Tim Kiem..."
                                         GotFocus="tb_TimKiem_GotFocus"
                                         LostFocus="tb_TimKiem_LostFocus"></TextBox>
                            </Grid>
                        </Border>

                        <!-- list sản phẩm -->
                        <Border Style="{StaticResource borderngoai}" Grid.Row="2" Padding="15">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="stb_ListSanPham"></StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>

                <!-- bảng số lượng và nút -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="95"/>
                        <RowDefinition/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <!-- bảng số lượng -->
                    <Border Style="{StaticResource borderngoai}">
                        <Grid>
                            <TextBlock x:Name="tbl_SoLuong" FontSize="13" VerticalAlignment="Top">  so luong</TextBlock>
                            <Border Style="{StaticResource bordertrong}" Height="35" VerticalAlignment="Bottom">
                                <TextBox Style="{DynamicResource TextBoxStyle2}" x:Name="tb_SoLuong" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Bottom" 
                                         FontFamily="Cascadia Mono"
                                         FontSize="16"
                                         Background="#D9D9D9"
                                         Foreground="#A4A4A4"
                                         Width="190"
                                         Text="1000..." Margin="0,0,0,8" 
                                         TextChanged="tb_SoLuong_TextChanged"
                                         GotFocus="tb_SoLuong_GotFocus"
                                         LostFocus="tb_SoLuong_LostFocus">
                                </TextBox>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- thông tin cơ bản của sản phẩm -->
                    <StackPanel Grid.Row="1" Width="200" Height="80">
                        <TextBlock x:Name="tbl_TenSanPham" Foreground="#E2895A">Ten : sdflksdf</TextBlock>
                        <TextBlock x:Name="tbl_GiaBan">gia : 342</TextBlock>
                        <TextBlock x:Name="tbl_TrangThai" FontSize="14" TextWrapping="WrapWithOverflow" Height="40">Trang thai</TextBlock>
                    </StackPanel>

                    <!-- các nút -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <StackPanel.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Cascadia Mono"/>
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="Foreground" Value="#565656"/>
                            </Style>
                        </StackPanel.Resources>
                        <!-- nút Mua -->
                        <Button Style="{DynamicResource ButtonStyle1}" Width="90" Background="#E2895A" Click="Button_Click">
                            <Button.Content>
                                <TextBlock x:Name="tbl_bt_Them">
                                    Them
                                </TextBlock>
                            </Button.Content>
                        </Button>
                        <Grid Width="15"/>
                        <!-- nút hủy -->
                        <Button Style="{DynamicResource ButtonStyle1}" Width="90" Background="#E2895A" Click="Button_Click_1">
                            <Button.Content>
                                <TextBlock x:Name="tbl_bt_Huy">
                                    Huy
                                </TextBlock>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
